{
  "name": "react-hooks-redux-typescript-css-with-linters-boilerplate",
  "version": "1.1.1",
  "description": "A frontend boilerplate with React hooks, Redux and Typescript with linters",
  "homepage": "https://mrrohanrp.github.io/react-redux-typescript-boilerplate",
  "keywords": [
    "react",
    "hooks",
    "redux",
    "typescript",
    "boilerplate",
    "todomvc",
    "linters"
  ],
  "main": "index.jsx",
  "author": "mrrohanrp",
  "license": "ISC",
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack serve --mode development --hot --progress --color --port 3000 --open",
    "build": "webpack --mode production --progress --color",
    "lint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" --format table",
    "lint:fix": "eslint \"./src/**/*.{js,jsx,ts,tsx}\" --fix",
    "stylelint": "stylelint \"./src/**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"./src/**/*.{css,scss}\" --fix",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,css,scss,md,json}\" --config ./.prettierrc",
    "lintall": "npm run lint && npm run stylelint",
    "lintall:fix": "npm run lint:fix && npm run stylelint:fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.2",
    "classnames": "^2.3.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-webpack-plugin": "^3.1.1",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.2.3",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "mini-css-extract-plugin": "^2.5.3",
    "postcss": "^8.4.6",
    "postcss-browser-reporter": "^0.6.0",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.4.1",
    "postcss-reporter": "^7.0.5",
    "postcss-url": "^10.1.3",
    "prettier": "^2.5.1",
    "style-loader": "^3.3.1",
    "stylelint": "^14.5.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "24.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "src/**/*.{scss,css}": [
      "stylelint --cache --fix",
      "prettier --write"
    ]
  },
  "browserslist": [
    ">0.1%",
    "not dead",
    "not op_mini all"
  ]
}
